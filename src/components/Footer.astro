---
import SMedia from "../data/SMedia";
---

<footer class="footer">
  

  <div class="social-media">
   
  
      {
        SMedia.map((item) =><a href={item.url} target="_blank">{item.name}</a>)
      }
    
  </div>
  <div class="copyright">
    <small>
      Copyright &copy; <span id="copyright"></span>
      All rights reserved
    </small>
  </div>
    
  </footer>
  
  <style>
    .footer {
        position: relative;
        bottom: 0;
        width: 100%;
        height: 50px;
        background-color: #f2f2f200;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .social-media{
      padding-top: 3rem; 
      padding-bottom: 1rem;

    }
    .social-media a{
      margin-left: 20px;
      margin-right: 20px;
      
    }
    .copyright{
      padding-bottom: 1rem;
    }
  </style>
  
  <script>
    document.querySelector("#copyright")
      .textContent = new Date().getFullYear().toString();
  </script>
  
