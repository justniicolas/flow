---
const { post } = Astro.props;

// utils imports
import { slugify, formatDate } from "../js/utils";
const { category, title, description, image,minutesRead } = post.frontmatter;
const postUrl = `/blog/${slugify(title)}`;
const categories = category.split(",");
---

<div class="post">
  <article class="card">
    <div class="container">
      <a href={postUrl}
        ><img class="main-image" src={image.src} alt={image.alt} /></a
      >
    </div>
  
  <div class="out-card">
    <a href={postUrl}><p class="title">{title.length > 50 ? `${title.slice(0, 50)}...` : title}</p></a>
    
    <div class="categories-time">
      {
        categories.map((cat) => (
          <small>
            <a href={`/category/${slugify(cat)}/`} class="badge">
              {cat.trim()}
            </a>
          </small>
        ))
      }
      
      <div class="reading-time">
        <i class="fa-solid fa-book-open-reader" style="color: #6c757d;"></i>
        <p>{minutesRead} min</p>
      </div>
    </div>
  
  </div>
</article>
</div>
<style>

  .container {
    max-height: 50vh;
    min-height: 30vh;
    min-width: 40vh;
    border: 1px solid;
    border-color: #552BFF;
    border-radius: 5px;
    text-align: center;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .small {
    font-size: 80%;
  }

  .badge {
    display: inline-block;
    justify-content: right;
    background-color: #562bff;
    color: #fff;
    padding: 5px 10px;
    border-radius: 3px;
    text-decoration: none;
    transition: background-color 0.5s ease-in-out;
    font-size: 14px;
    margin-right: 5px;
  }

  .badge:hover {
    background-color: #260a96a9;
  }

  .title {
    font-size: 24px;
    font-weight: 600;
    margin-top: 8px;
    margin-bottom: 8px;
  }

  p {
    font-size: 15px;
    margin-bottom: 16px;
    color: #6c757d;
  }

  .main-image {
    display: block;
    margin: 0 auto;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    object-position: center;
    border-radius: 5px;
  }

  .categories-time {
    display: flex;
    align-items : center;
    margin-top : auto;
  }
  .reading-time {
    margin-left: auto;
  }
  .reading-time p {
    font-size: 14px;
  }
  .description {
    text-align: left;
    overflow: hidden;
  }
  .fa-sharp {
    font-size: 15px;
    margin-right: 5px;
    color: #ffffff;
  }

  .out-card {
    max-width: 50vh;
    height : 20vh;
    display: flex;
    flex-direction: column;
    flex: 1;
    min-width: 0;
  }

@media screen and (max-width: 768px) {



  .title {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .badge {
    font-size: 0.8rem;
    margin-right: 0.5rem;
  }

  .reading-time p {
    font-size: 1rem;
  }

  .fa-sharp {
    font-size: 1rem;
    margin-right: 0.5rem;
  }
  .post{
    padding: 0;
    max-width: 90%;
  }
}

</style>
