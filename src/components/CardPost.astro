---
const { post } = Astro.props;

// utils imports
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
import { slugify, formatDate } from "../js/utils";
import { getDaysSince } from "../js/utils";
const { category, title, date, image, minutesRead } = post.frontmatter;
const postUrl = `/${lang}/blog/${slugify(title)}`;
const categories = category.split(",");

---

<div class="flex flex-row m-auto lg:flex-col">
  <article class="rounded max-w-full mx-auto my-4 min-w-[15vw] py-4">
    <a href={postUrl}>
      <div class="relative h-64 lg:h-80 w-64 lg:w-[30rem] border border-[#552bff] rounded text-center overflow-hidden flex items-center justify-center flex-col  transition-all duration-300 ease-in-out shadow-none hover:shadow-2xl">
          <img class="block m-auto max-w-full max-h-full object-cover object-center rounded" src={image.src} alt={image.alt} />
      </div>
    </a>
    <div class="w-64 lg:w-80 h-20 max-h-32 flex flex-col flex-1 min-h-min px-2 ">
      <a href={postUrl}
        ><p class="text-lg md:text-2xl font-semibold mt-2 mb-4 hover:text-[#c5c5c5] ease-in-out duration-200">
          {title.length > 50 ? `${title.slice(0, 50)}...` : title}
        </p></a
      >

      <div class="flex items-center mt-auto justify-between">
        {
          categories.map((cat) => (
            <small>
              <a href={`/${lang}/category/${slugify(cat)}/`} class="text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded mr-2 bg-gray-700 text-gray-400 border border-gray-500">
                {cat.trim()}
              </a>
            </small>
          ))
        }

        <div class="flex items-center ml-auto">
          <i class="fa-solid fa-book-open-reader" style="color: #6c757d;"></i>
          <p class="ml-2">{minutesRead} min</p>
        </div>
      </div>
    </div>
  </article>
</div>