---
//data imports
import navData from "../data/navData";
import SMedia from "../data/SMedia";
---

<nav>
  <div class="flex flex-row items-center">
    <div class="flex justify-between items-center px-8 py-4 text-center w-full navbar">
      <a href="/" class="text-gradient"
        >npm<span class="magic-text">Bytes</span></a
      >
      <button
        id="navBtn"
        class="rounded-full bg-gray-700 border-none cursor-pointer h-10 w-10 flex justify-center items-center transition-transform duration-300 ease-in-out relative overflow-hidden navBtn"
      >
        <svg
          fill="#ffffff"
          version="1.1"
          id="Capa_1"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          width="20px"
          height="20px"
          viewBox="0 0 80 80"
          xml:space="preserve"
        >
          <g>
            <path
              d="M64,48L64,48h-8V32h8c8.836,0,16-7.164,16-16S72.836,0,64,0c-8.837,0-16,7.164-16,16v8H32v-8c0-8.836-7.164-16-16-16
         S0,7.164,0,16s7.164,16,16,16h8v16h-8l0,0l0,0C7.164,48,0,55.164,0,64s7.164,16,16,16c8.837,0,16-7.164,16-16l0,0v-8h16v7.98
         c0,0.008-0.001,0.014-0.001,0.02c0,8.836,7.164,16,16,16s16-7.164,16-16S72.836,48.002,64,48z M64,8c4.418,0,8,3.582,8,8
         s-3.582,8-8,8h-8v-8C56,11.582,59.582,8,64,8z M8,16c0-4.418,3.582-8,8-8s8,3.582,8,8v8h-8C11.582,24,8,20.417,8,16z M16,72
         c-4.418,0-8-3.582-8-8s3.582-8,8-8l0,0h8v8C24,68.418,20.418,72,16,72z M32,48V32h16v16H32z M64,72c-4.418,0-8-3.582-8-8l0,0v-8
         h7.999c4.418,0,8,3.582,8,8S68.418,72,64,72z"
            ></path>
          </g>
        </svg>
      </button>
    </div>
    <div class="flex items-center justify-end flex-grow">
      <div class="px-2">
        <div class="follow-button">
          <a href="/subscribe">
            <div class="badge">Subscribe</div>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>
<div id="myModal" class="hidden fixed z-10 left-0 top-0 w-full h-full overflow-auto bg-black bg-opacity-50">
  <div class="mx-auto mt-[15%] border-1 bg-black w-[80%] px-28 py-16">
    <span class="text-gray-500 float-right text-2xl font-bold close">&times;</span>
    <ol id="list">
      <div class="pages">
        <li><a href="/">Home</a></li>
        <li><a href="/posts">Posts</a></li>
        <li><a href="/subscribe">Subscribe</a></li>
      </div>
      <div class="social-media">
        {
          SMedia.map((item) => (
            <li>
              <a href={item.url} target="_blank">
                {item.name}
              </a>
            </li>
          ))
        }
      </div>
    </ol>
  </div>
</div>

<style>

  .navBtn:active {
    transform: scale(0.95);
  }
  .navBtn::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.5);
    opacity: 0;
    transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
  }

  .navBtn:focus::before {
    transform: translate(-50%, -50%) scale(2);
    opacity: 1;
  }

  ol {
    margin-bottom: 2vh;
  }
  li {
    list-style-type: none;
    width: fit-content;
  }
  li:hover {
    background-color: white;
  }
  input[type="text"] {
    width: 30%;
    -webkit-transition: width 0.15s ease-in-out;
    transition: width 0.15s ease-in-out;
  }
  input[type="text"]:focus {
    width: 70%;
  }

  #list {
    font-size: 1.5em;
  }

  .navbar a {
    margin-left: 20px;
    margin-right: 20px;
    color: white;
    padding: 10px;
    transition: ease-in-out 0.5s;
    border-radius: 10px;
  }

  .navbar a:hover {
    background-color: #ffffff39;
    border-radius: 10px;
    transition: ease-in-out 0.5s;
  }

  .navbar a.active:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background-color: white;
  }

  .text-gradient {
    font-size: larger;
    background: #1626ff;
    background: linear-gradient(to right, #1626ff 0%, #6717cf 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0px 0px 10px rgba(146, 146, 146, 0.467);
  }

  .close:hover,
  .close:focus {
    text-decoration: none;
    cursor: pointer;
  }

  @media only screen and (max-width: 768px) {
    .modal-content {
      margin: 50% auto;
    }
  }
</style>
<script>
  const modal = document.getElementById("myModal");
  const btn = document.getElementById("navBtn");
  const span = document.getElementsByClassName("close")[0];

  const openModal = function () {
    modal.style.display = "block";
  };

  const closeModal = function () {
    modal.style.display = "none";
  };

  btn.onclick = openModal;
  span.onclick = closeModal;

  document.addEventListener("keydown", function (event) {
    if ((event.ctrlKey || event.metaKey) && event.key === "k") {
      openModal();
    }
  });

  window.onclick = function (event) {
    if (event.target == modal) {
      closeModal();
    }
  };
</script>
