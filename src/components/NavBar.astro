---
//data imports
import navData from '../data/navData';
import Separation from './Separation.astro';
---

<nav>
    <div class="navbar">
        <a href="/"><span class="text-gradient">Flow</span></a>
        <ul>
            {
                navData.map((item) =><a href={item.path}>{item.name}</a>)
            }
        </ul>
        
    </div>

</nav>
<Separation />


<style>
    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: larger;
        padding: 5px;
        
    }
    
    .navbar a {
        margin-left: 20px;
        margin-right: 20px;
        color: white;
    }

    .text-gradient {
        font-size: larger;
        background: #1626FF;
        background: linear-gradient(to right, #1626FF 0%, #6717CF 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0px 0px 10px rgba(146, 146, 146, 0.467);
    }
    

</style>
