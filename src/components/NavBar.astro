---
//data imports
import navData from "../data/navData";
---
<nav>
  <div class="container">
    <div class="navbar">
      <a href="/">npm<span class="magic-text">Bytes</span></a>
      {navData.map((item) => <a href={item.path}>{item.name}</a>)}
    </div>
    <div class="follow-button">
      <a href="/subscribe"><div class="badge">Subscribe</div></a>
    </div>
  </div>
</nav>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .navbar {

  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: larger;
  padding: 10px;
  text-align: center;
  width: 100%;
  }
  .follow-button {
  margin-right: auto;
  padding-right: 5vh;
}
  .navbar a {
    margin-left: 20px;
    margin-right: 20px;
    color: white;
    padding: 10px;
    transition: ease-in-out 0.5s;
    border-radius: 10px;
  }
  .navbar a:hover {
    background-color: rgba(255, 255, 255, 0.225);
    border-radius: 10px;
    transition: ease-in-out 0.5s;
  }
  .navbar a.active:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background-color: white;
  }
  .navbar a.active:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background-color: white;
  }

  .text-gradient {
    font-size: larger;
    background: #1626ff;
    background: linear-gradient(to right, #1626ff 0%, #6717cf 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0px 0px 10px rgba(146, 146, 146, 0.467);
  }
</style>
