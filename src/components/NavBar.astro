  <div class="flex flex-row items-center z-50 relative bg-[#111111]">
    <div
      class="flex justify-between items-center px-4 py-4 text-center w-full navbar lg:px-8"
    >
      <a href="/" class="text-gradient">
        npm<span class="magic-text">Bytes</span>
      </a>
      <button
        id="navBtn"
        class="rounded-full bg-gray-700 border-none cursor-pointer h-10 w-10 flex justify-center items-center transition-transform duration-300 ease-in-out relative overflow-hidden navBtn"
      >
