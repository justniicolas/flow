---
import { Image } from "@astrojs/image/components";
// utils imports
import { slugify, formatDate } from "../js/utils";

const { category, title, author, date, image } = Astro.props;
const categories = category.split(',')
---

<header>
  <div class="container">
    <img src={image.src} alt={image.alt}>
    <h1 class="h2">{title}</h1>
    
    <p>
      by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
        formatDate(date)
      }
    </p>
    {categories.map((cat) => (
      <small>
        <a href={`/category/${slugify}/`} class="badge">{cat.trim()}</a>
      </small>
    ))}
  </div>
  
  
</header>


<style>
    header {
        padding: 20px;
    }

    .container {
    max-width: 960px;
    margin: 0 auto;
    }

    .small {
    font-size: 80%;
    }

    .badge {
    display: inline-block;
    background-color: #562bff;
    color: #fff;
    padding: 5px 10px;
    border-radius: 3px;
    text-decoration: none;
    transition: ease-in-out .5s;
    }

    .badge:hover {
    background-color: #260a96a9;
    transition: ease-in-out .5s;
    }

    h1 {
    font-size: 36px;
    }

    p {
    font-size: 18px;
    margin-top: -3%;
    }

    a {
    color: #007bff;
    text-decoration: none;
    }

    a:hover {
    text-decoration: underline;
    }
</style>