---
// component import
import PostHeader from "../components/PostHeader.astro";
import MainLayout from "./MainLayout.astro";

const { frontmatter } = Astro.props;

const { title, description, date, category, author, image } = frontmatter;
---

<MainLayout {title} {description}>
  <PostHeader {title} {description} {date} {category} {image} {author} />
  <div class="post-content">
    <div class="content">
      <slot />
    </div>
    <div class="sidebar"></div>
  </div>
</MainLayout>

<style>
.post-content {
  display: flex;
  justify-content: center;
}

.content {
  width: 100%;
  max-width: 150vh; /* Ajoutez une largeur maximale pour limiter la largeur du contenu */
  margin: 0 auto; /* Ajoutez une marge automatique pour centrer le contenu */
  word-wrap: break-word;
  overflow-x: auto;
}

</style>
