---
// component import
import PostHeader from "../components/PostHeader.astro";
import MainLayout from "./MainLayout.astro";
import CategoryCloud from "../components/CategoryCloud.astro";
import RecommandationPost from "../components/RecommandationPost.astro"
const { frontmatter } = Astro.props;
const { title, description, date, category, author, image, minutesRead } =
  frontmatter;
---

<MainLayout {title}>
  <PostHeader {title} {description} {date} {category} {image} {author} />
  <div class="post-content">
    <div class="content flex justify-center flex-col px-4 lg:px-0">
      <div class="reading-time pb-2">
        <i class="fa-solid fa-book-open-reader" style="color: #ffffff;"></i>
        <p>{minutesRead} minutes read</p>
      </div>
      <div class="prose max-w-none text-white prose-a:text-[#562bff] prose-headings:text-white prose-strong:text-gray-500">
        <slot />
      </div>
     
    </div>
    <div class="sidebar"></div>
  </div>
  <RecommandationPost/>
 
  </div>
  
</MainLayout>

<style>
  .post-content {
    display: flex;
    justify-content: center;
  }
  .content {
    width: 100%;
    max-width: 150vh;
    margin: 0 auto;
    word-wrap: break-word;
    overflow-x: auto;
  }

</style>
