---
// component import
import PostHeader from "../components/PostHeader.astro";
import MainLayout from "./MainLayout.astro";
import CategoryCloud from "../components/CategoryCloud.astro";
import RecommandationPost from "../components/RecommandationPost.astro"
const { frontmatter } = Astro.props;
const { title, description, date, category, author, image, minutesRead } =
  frontmatter;
---

<MainLayout {title}>
  <PostHeader {title} {description} {date} {category} {image} {author} />
  <div class="post-content">
    <div class="content">
      <div class="reading-time">
        <i class="fa-solid fa-book-open-reader" style="color: #ffffff;"></i>
        <p>{minutesRead} minutes read</p>
      </div>
      <slot />
    </div>
    <div class="sidebar"></div>
  </div>
  <RecommandationPost/>
 
  </div>
  
</MainLayout>

<style>
  .post-content {
    display: flex;
    justify-content: center;
  }
  .content {
    width: 100%;
    max-width: 150vh;
    margin: 0 auto;
    word-wrap: break-word;
    overflow-x: auto;
    padding-left: 20px;
    padding-right: 20px;
  }
  .images {
      max-width: 60%;
      height: auto;
      display: block;
      margin: 0 auto;
    }

  @media screen and (max-width: 768px) {
    .images {
      width: 100%;
    }
  }
</style>
