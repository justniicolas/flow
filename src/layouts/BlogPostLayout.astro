---
// component import
import PostHeader from "../components/PostHeader.astro";
import MainLayout from "./MainLayout.astro";
import EndPost from "../components/EndPost.astro";
import CategoryCloud from "../components/CategoryCloud.astro";
const { frontmatter } = Astro.props;
const { title, description, date, category, author, image, minutesRead } =
  frontmatter;
---

<MainLayout {title}>
  <PostHeader {title} {description} {date} {category} {image} {author} />
  <div class="post-content">
    <div class="content">
      <div class="reading-time">
        <i class="fa-solid fa-book-open-reader" style="color: #ffffff;"></i>
        <p>{minutesRead} minutes read</p>
      </div>
      <slot />
    </div>
    <div class="sidebar"></div>
  </div>
  <EndPost />
  <aside class="container-categories">
    <h2 class="categories">Blog Categories</h2>
    <CategoryCloud/>
  </aside>
</MainLayout>

<style>
  .post-content {
    display: flex;
    justify-content: center;
  }

  .content {
    width: 100%;
    max-width: 150vh;
    margin: 0 auto;
    word-wrap: break-word;
    overflow-x: auto;
    padding-left: 20px;
    padding-right: 20px;
  }
  .container-categories{
    margin-left: 5rem;

  }

</style>
