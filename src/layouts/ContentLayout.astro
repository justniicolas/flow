---
// component import
import {formatDate } from "../js/utils";
import MainLayout from "./MainLayout.astro";

const { frontmatter } = Astro.props;
const { title, description, date, category, author, image, minutesRead } =
  frontmatter;
---

<MainLayout {title}>
  <div class="content">
    <slot /> 
    Last update : {formatDate(date)}
  </div>
      
    
</MainLayout>

<style>


  .post-content {
    display: flex;
    justify-content: center;
  }

  .content {
    width: 100%;
    max-width: 150vh;
    margin: 0 auto;
    word-wrap: break-word;
    overflow-x: auto;
    padding-left: 20px;
    padding-right: 20px;
  }


</style>
